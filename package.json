{
  "name": "void-design-vue",
  "version": "1.0.15",
  "description": "A Vue 3 UI Component Library",
  "type": "module",
  "main": "./dist/void-design-vue.umd.cjs",
  "module": "./dist/void-design-vue.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/void-design-vue.js",
      "require": "./dist/void-design-vue.umd.cjs"
    },
    "./style": "./dist/style.css",
    "./style.css": "./dist/style.css"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "components",
    "library",
    "design-system"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoKoii/void-ui-dev.git"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:post",
    "build:lib": "npm run build:vite && npm run build:types",
    "build:vite": "vite build --config vite.lib.config.ts",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "build:post": "node scripts/post-build.mjs",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "test": "vitest",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "lazy": "node scripts/auto-publish.mjs"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@ant-design/colors": "^7.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "sass": "^1.91.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vue": "^3.5.18",
    "vue-tsc": "^3.0.4"
  }
}