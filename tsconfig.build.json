{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/index.ts", "src/components/**/*"],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/App.vue",
    "src/main.ts",
    "src/**/__tests__/**"
  ]
}
